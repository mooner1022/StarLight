<resources>
    <!-- Base application theme. -->
    <style name="Theme.StarLight" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_bright</item>
        <item name="colorPrimaryVariant">@color/sub_bright</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_dark</item>
        <item name="colorSecondaryVariant">@color/main_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorControlActivated">@color/main_dark</item>
        <item name="colorControlNormal">@color/main_bright</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:actionMenuTextColor">@color/black</item>

        <!--dialog background color. -->
        <item name="colorBackgroundFloating">@color/background_dialog</item>

        <item name="android:activityOpenEnterAnimation">
            @anim/activity_fade_in</item>
    </style>

    <style name="Theme.StarLight.NoActionBar" parent="Theme.StarLight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StarLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StarLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="overrideExpandableCardViewSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:padding">16dp</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
        <item name="track">@drawable/switch_track_selector</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nanumsquare_round_bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nanumsquare_round_bold</item>
    </style>

    <style name="Stepper.CardView" parent="CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
    </style>
</resources>
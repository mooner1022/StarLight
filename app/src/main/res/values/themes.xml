<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StarLight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_dark</item>
        <item name="colorPrimaryVariant">@color/sub_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_bright</item>
        <item name="colorSecondaryVariant">@color/sub_bright</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorControlActivated">@color/main_bright</item>
        <item name="colorControlNormal">@color/main_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StarLight.NoActionBar" parent="Theme.StarLight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StarLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StarLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
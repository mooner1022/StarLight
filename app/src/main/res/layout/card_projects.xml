<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                                                   android:backgroundTint="@color/transparent">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardViewIsEnabled"
            android:layout_width="12dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/project_card"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"/>

    <com.mooner.starlight.ui.presets.ExpandableCardView
            android:id="@+id/card_project"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@color/project_card"
            android:backgroundTint="@color/project_card"
            app:animationDuration="200"
            app:expandOnClick="true"
            app:inner_view="@layout/card_project_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardViewIsEnabled"
            app:layout_constraintTop_toTopOf="parent"
            app:showSwitch="true"
            app:startExpanded="false"
            app:title="PROJECT_NAME"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
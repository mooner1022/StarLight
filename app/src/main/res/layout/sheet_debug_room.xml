<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_top"
        app:behavior_hideable="false"
        app:behavior_peekHeight="24dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:backgroundTint="@color/background" android:focusableInTouchMode="true">

    <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="6dp" android:id="@+id/cardView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" app:cardElevation="0dp"
            app:cardBackgroundColor="#7A7A7A" app:cardCornerRadius="3dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/cardView2"
            android:layout_marginTop="16dp" android:id="@+id/configRecyclerView" android:overScrollMode="never"
            android:nestedScrollingEnabled="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>